{
  "swagger": "2.0",
  "info": {
    "title": "CSE341 Books & Wishlist API",
    "description": "API for managing books and wishlist items with JWT authentication",
    "version": "1.0.0"
  },
  "host": "cse341-chg2.onrender.com",
  "basePath": "/",
  "schemes": ["http", "https"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\""
    }
  },
  "paths": {
    "/book/": {
      "get": {
        "summary": "Get all books",
        "responses": {
          "200": { "description": "List of all books", "schema": { "type": "array", "items": { "$ref": "#/definitions/Book" } } },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "summary": "Create a new book",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "book",
            "in": "body",
            "description": "Book object to create",
            "required": true,
            "schema": { "$ref": "#/definitions/Book" }
          }
        ],
        "responses": {
          "201": { "description": "Book created successfully" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/book/{id}": {
      "get": {
        "summary": "Get a book by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Book found", "schema": { "$ref": "#/definitions/Book" } },
          "404": { "description": "Book not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "summary": "Update a book by ID",
        "security": [{ "Bearer": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "book",
            "in": "body",
            "description": "Updated book data",
            "required": true,
            "schema": { "$ref": "#/definitions/Book" }
          }
        ],
        "responses": {
          "200": { "description": "Book updated successfully", "schema": { "$ref": "#/definitions/Book" } },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Book not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "summary": "Delete a book by ID",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Book deleted successfully" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Book not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/wishlist/": {
      "get": {
        "summary": "Get all wishlist items",
        "responses": {
          "200": { "description": "List of all wishlist items", "schema": { "type": "array", "items": { "$ref": "#/definitions/Wishlist" } } },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "summary": "Add a new wishlist item",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "wishlistItem",
            "in": "body",
            "description": "Wishlist item to create",
            "required": true,
            "schema": { "$ref": "#/definitions/Wishlist" }
          }
        ],
        "responses": {
          "201": { "description": "Wishlist item created successfully" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/wishlist/{id}": {
      "get": {
        "summary": "Get a wishlist item by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Wishlist item found", "schema": { "$ref": "#/definitions/Wishlist" } },
          "404": { "description": "Wishlist item not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "summary": "Update a wishlist item by ID",
        "security": [{ "Bearer": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "wishlistItem",
            "in": "body",
            "description": "Updated wishlist item data",
            "required": true,
            "schema": { "$ref": "#/definitions/Wishlist" }
          }
        ],
        "responses": {
          "200": { "description": "Wishlist item updated successfully", "schema": { "$ref": "#/definitions/Wishlist" } },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Wishlist item not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "summary": "Delete a wishlist item by ID",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Wishlist item deleted successfully" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Wishlist item not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/authenticate/register": {
      "post": {
        "summary": "Register a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User registration object",
            "required": true,
            "schema": { "$ref": "#/definitions/User" }
          }
        ],
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Bad Request" },
          "409": { "description": "User already exists" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/authenticate/login": {
      "post": {
        "summary": "Login user",
        "parameters": [
          {
            "name": "credentials",
            "in": "body",
            "description": "User login credentials",
            "required": true,
            "schema": { "$ref": "#/definitions/UserLogin" }
          }
        ],
        "responses": {
          "200": { "description": "Login successful" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "required": ["authorFirstName", "authorLastName", "bookTitle"],
      "properties": {
        "authorFirstName": { "type": "string" },
        "authorLastName": { "type": "string" },
        "bookTitle": { "type": "string" },
        "bookGenre": { "type": "string" },
        "numberOfPages": { "type": "integer" },
        "printType": { "type": "string" },
        "numberOfCopies": { "type": "integer" }
      }
    },
    "Wishlist": {
      "type": "object",
      "required": ["authorFirstName", "authorLastName", "bookTitle"],
      "properties": {
        "authorFirstName": { "type": "string" },
        "authorLastName": { "type": "string" },
        "bookTitle": { "type": "string" },
        "bookGenre": { "type": "string" },
        "numberOfPages": { "type": "integer" },
        "printType": { "type": "string" },
        "numberOfCopies": { "type": "integer" }
      }
    },
    "User": {
      "type": "object",
      "required": ["email", "password"],
      "properties": {
        "email": { "type": "string" },
        "password": { "type": "string" },
        "name": { "type": "string" }
      }
    },
    "UserLogin": {
      "type": "object",
      "required": ["email", "password"],
      "properties": {
        "email": { "type": "string" },
        "password": { "type": "string" }
      }
    }
  }
}
